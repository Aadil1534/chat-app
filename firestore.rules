rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: check if user is admin (document exists in admins collection)
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - anyone can read to check admin status; only admins can write (assign/revoke)
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && isAdmin();
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Users collection - users can read/write own doc; admins can write any user (for edit/delete)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Chats collection - participants can read/write; admins can create groups
    match /chats/{chatId} {
      allow read, write: if request.auth != null 
        && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null 
        && (request.auth.uid in request.resource.data.participants || isAdmin());
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Messages subcollection - participants can read/write
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Calls - for WebRTC signaling
    match /calls/{callId} {
      allow read, write: if request.auth != null;
    }
  }
}
